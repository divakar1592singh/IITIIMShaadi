<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_marginTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center">
                <LinearLayout
                    android:layout_weight=".7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <com.senzecit.iitiimshaadi.utils.CircleImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/profile_img1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1.3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/idUserIDTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UserID"
                        android:textColor="@color/colorGrey"
                        android:textSize="14sp"
                        android:padding="7dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditBox"/>
                    <TextView
                        android:id="@+id/idUserNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UserName"
                        android:textColor="@color/colorGrey"
                        android:textSize="14sp"
                        android:padding="7dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditBox"/>
                    <TextView
                        android:id="@+id/idReligionTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Religion"
                        android:textColor="@color/colorGrey"
                        android:textSize="14sp"
                        android:padding="7dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditBox"/>
                    <TextView
                        android:id="@+id/idEducationTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Highest Education"
                        android:textColor="@color/colorGrey"
                        android:textSize="14sp"
                        android:padding="7dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorEditBox"/>
                    <TextView
                        android:id="@+id/idJobTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Location"
                        android:textColor="@color/colorGrey"
                        android:textSize="14sp"
                        android:padding="7dp"/>
                    <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:background="@color/colorEditBox"/>-->
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:padding="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Add as Friend"
                    android:textAllCaps="false"
                    android:textSize="14dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="UnShortlist"
                    android:textAllCaps="false"
                    android:textSize="14dp" />
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="View Profile"
                    android:textSize="14dp"
                    android:textAllCaps="false"/>
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>