<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="@dimen/size_4_dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/grid_imageView"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:src="@drawable/profile_img2"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:id="@+id/idSetProfileIV"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_set_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/size_4_dp"
            android:layout_marginTop="@dimen/size_4_dp"
            />
        <ImageView
            android:id="@+id/idSettingIV"
            android:layout_width="@dimen/size_20_dp"
            android:layout_height="@dimen/size_20_dp"
            android:src="@drawable/ic_settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="@dimen/size_4_dp"
            android:layout_marginTop="@dimen/size_4_dp"
            />
        <ImageView
            android:id="@+id/idDeleteIV"
            android:layout_width="@dimen/size_20_dp"
            android:layout_height="@dimen/size_20_dp"
            android:src="@drawable/ic_delete_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/size_4_dp"
            />
    </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>