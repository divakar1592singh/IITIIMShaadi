<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:id="@+id/idBackIV"
            android:layout_width="58dp"
            android:layout_height="44dp"
            android:layout_marginLeft="@dimen/activity_vertical_margin_small"
            android:layout_marginTop="2dp"
            android:src="@drawable/back_img" />

        <TextView
            android:id="@+id/idUserNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Group Name"
            android:textColor="@color/colorYellow"
            android:textSize="24sp" />

        <com.senzec.alfa.utils.CircleImageView
            android:id="@+id/idProfileIV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/profile_img1" />
    </RelativeLayout>

</LinearLayout>